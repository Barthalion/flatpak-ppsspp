{
  "app-id": "org.ppsspp.PPSSPP",
  "version": "1.3",
  "branch": "stable",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "command": "ppsspp",
  "rename-desktop-file": "ppsspp.desktop",
  "rename-icon": "ppsspp",
  "rename-appdata-file": "ppsspp.appdata.xml",
  "finish-args": [
    "--filesystem=home:ro",
    "--socket=pulseaudio",
    "--socket=wayland",
    "--socket=x11"
  ],
  "modules": [
    "modules/sdl2-2.0.5.json",
    "modules/glu-9.0.0.json",
    {
      "name": "ppsspp",
      "buildsystem": "cmake",
      "no-make-install": true,
      "build-commands": [
        "mkdir -p /app/ppsspp /app/bin /app/share/applications",
        "install -m755 PPSSPPSDL /app/ppsspp/",
        "cp -dr assets /app/ppsspp/",
        "install -Dm644 assets/unix-icons/icon-512.svg /app/share/icons/hicolor/scalable/apps/ppsspp.svg",
        "ln -s /app/ppsspp/PPSSPPSDL /app/bin/ppsspp",
        "install -m644 ppsspp.desktop /app/share/applications/",
        "install -Dm644 appdata.xml /app/share/appdata/ppsspp.appdata.xml"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/hrydgard/ppsspp.git",
          "branch": "v1.3"
        },
        {
          "type": "file",
          "path": "ppsspp.desktop"
        },
        {
          "type": "file",
          "path": "appdata.xml"
        }
      ]
    }
  ]
}
