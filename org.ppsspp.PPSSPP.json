{
  "app-id": "org.ppsspp.PPSSPP",
  "version": "1.3",
  "branch": "stable",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.4",
  "sdk": "org.freedesktop.Sdk",
  "command": "ppsspp",
  "rename-desktop-file": "ppsspp.desktop",
  "rename-icon": "ppsspp",
  "rename-appdata-file": "ppsspp.xml",
  "finish-args": [
    "--filesystem=home:ro",
    "--share=network",
    "--socket=pulseaudio",
    "--socket=x11"
  ],
  "modules": [
    "dependencies/sdl2-2.0.5.json",
    "dependencies/glu-9.0.0.json",
    {
      "name": "ppsspp",
      "buildsystem": "cmake",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/hrydgard/ppsspp.git",
          "branch": "v1.3"
        },
        {
          "type": "patch",
          "path": "ppsspp-install.patch"
        },
        {
          "type": "script",
          "dest-filename": "install.sh",
          "commands": [
            "set -x",
            "mkdir -p /app/ppsspp /app/bin",
            "install -m755 PPSSPPSDL /app/ppsspp/",
            "cp -dr assets /app/ppsspp/",
            "install -Dm644 assets/unix-icons/icon-512.svg /app/share/icons/hicolor/scalable/apps/ppsspp.svg",
            "ln -s /app/ppsspp/PPSSPPSDL /app/bin/ppsspp"
          ]
        },
        {
          "type": "file",
          "path": "ppsspp.desktop"
        },
        {
          "type": "file",
          "path": "appdata.xml"
        }
      ],
      "post-install": [
        "install -Dm644 appdata.xml /app/share/appdata/ppsspp.xml",
        "install -Dm644 ppsspp.desktop /app/share/applications/ppsspp.desktop"
      ]
    }
  ]
}
