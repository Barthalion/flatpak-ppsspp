{
  "app-id": "org.ppsspp.PPSSPP",
  "version": "1.3",
  "branch": "stable",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.4",
  "sdk": "org.freedesktop.Sdk",
  "command": "ppsspp",
  "rename-desktop-file": "ppsspp.desktop",
  "rename-icon": "ppsspp",
  "finish-args": [
    "--filesystem=home:ro",
    "--share=network",
    "--socket=pulseaudio",
    "--socket=x11"
  ],
  "modules": [
    {
      "name": "sdl2",
      "sources": [
        {
          "type": "archive",
          "url": "https://www.libsdl.org/release/SDL2-2.0.5.tar.gz",
          "sha256": "442038cf55965969f2ff06d976031813de643af9c9edc9e331bd761c242e8785"
        }
      ]
    },
    {
      "name": "glu",
      "sources": [
        {
          "type": "archive",
          "url": "https://mesa.freedesktop.org/archive/glu/glu-9.0.0.tar.bz2",
          "sha256": "1f7ad0d379a722fcbd303aa5650c6d7d5544fde83196b42a73d1193568a4df12"
        }
      ]
    },
    {
      "name": "ppsspp",
      "buildsystem": "cmake",
      "post-install": [],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/hrydgard/ppsspp.git",
          "branch": "v1.3"
        },
        {
          "type": "patch",
          "path": "ppsspp-install.patch"
        },
        {
          "type": "script",
          "dest-filename": "install.sh",
          "commands": [
            "set -x",
            "mkdir -p /app/ppsspp /app/bin /app/share/applications",
            "install -m755 PPSSPPSDL /app/ppsspp/",
            "cp -dr assets /app/ppsspp/",
            "install -Dm644 assets/unix-icons/icon-512.svg /app/share/icons/hicolor/scalable/apps/ppsspp.svg",
            "ln -s /app/ppsspp/PPSSPPSDL /app/bin/ppsspp",
            "install -m644 ppsspp.desktop /app/share/applications/"
          ]
        },
        {
          "type": "file",
          "path": "ppsspp.desktop"
        }
      ]
    }
  ]
}
